<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Enigma" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#443344</item>
        <item name="colorPrimaryVariant">#663366</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">#221122</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <item name="android:windowBackground">#222222</item>

        <item name="editTextStyle">@style/Enigma.EditText</item>
    </style>

    <style name="Enigma.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">#999999</item>
        <item name="android:background">#333333</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>